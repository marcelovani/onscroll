/**
 * Implements hook_uninstall().
 */
function onscroll_uninstall() {
  // Delete all the pathauto variables and then clear the variable cache.
  db_query("DROP TABLE {onscroll_tags};");
  cache_clear_all('variables', 'cache');
}

