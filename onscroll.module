<?php
define('ONSCROLL_URL', 'http://cdn.onscroll.com/onscroll.ms.js');

/**
 * Implements hook_permission().
 */
function onscroll_permission() {
  return array(
    'administer onscroll' => array(
      'title' => t('Administer onscroll'),
      'description' => t('Administer account settings and visibility of onscroll on your site.'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function onscroll_menu() {
  $items['admin/config/system/onscroll'] = array(
    'title' => 'OnScroll',
    'description' => 'Configure onscroll blocks on your website.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('onscroll_admin_settings_form'),
    'access arguments' => array('administer onscroll'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'admin.inc',
  );

  return $items;
}

/**
 * Implementation of hook_help().
 */
function onscroll_help($path, $arg) {
  switch ($path) {
    case 'admin/config/system/onscroll':
      return t('<a href="@url">OnScroll</a> determines the most appropriate time to deliver a viewable ad based on user behaviour.', array('@url' => 'http://www.onscroll.com/'));
  }
}

/**
 * Get the onscroll block content.
 */
function _onscroll_get_block_content() {
  $onscroll_content = array();
  if (!path_is_admin(current_path())) {
    if (variable_get('onscroll_enabled')) {
      // Add inline script.
      $ad_slot = '';
      if (variable_get('onscroll_ad_slot', 'custom') == 'custom') {
        $ad_slot = variable_get('onscroll_code');
      }
      else {
        if (module_exists('dfp')) {
          $tag = dfp_tag(variable_get('onscroll_ad_slot'));
          $slot = render($tag);

          $ad_slot .= '<script type="text/javascript" src="http://www.googletagservices.com/tag/js/gpt.js"></script>' . PHP_EOL;

          foreach (drupal_add_js() as $key => $value) {
            if (is_numeric($key)) {
              if (strstr($value['data'], 'googletag')) {
                if (strstr($value['data'], 'googletag.slots')) {
                  if (strstr($value['data'], variable_get('onscroll_ad_slot'))) {
                    $ad_slot .= '<script type="text/javascript">' . $value['data'] . '</script>' . PHP_EOL;
                  }
                }
                else {
                  $ad_slot .= '<script type="text/javascript">' . $value['data'] . '</script>' . PHP_EOL;
                }
              }
            }
          }
          $ad_slot .= $slot;
        }
      }
      

      $script = '<script type="text/javascript">';
      $script .= 'var onScrOll=new Object();' . PHP_EOL;
      $script .= 'onScrOll.code="' . base64_encode($ad_slot) . '";' . PHP_EOL;
      $script .= 'onScrOll.margin=' . variable_get('onscroll_margin', 600) . ';' . PHP_EOL;
      $script .= 'onScrOll.marginTop=' . variable_get('onscroll_margin_top', 10) . ';' . PHP_EOL;
      $script .= 'onScrOll.mode="' . variable_get('onscroll_mode', 'sticky') . '";' . PHP_EOL;
      $script .= 'onScrOll.height=' . variable_get('onscroll_height', 250) . ';' . PHP_EOL;
      $script .= 'onScrOll.width=' . variable_get('onscroll_width', 300) . ';' . PHP_EOL;
      $script .= 'onScrOll.reload=' . ((variable_get('onscroll_reload', FALSE) == FALSE) ? 'false' : 'true') . ';' . PHP_EOL;
      $script .= '</script>';
      $onscroll_content[] = $script;

      // Add external script.
      $script = '<script type="text/javascript" src="';
      $script .= variable_get('onscroll_url', ONSCROLL_URL);
      $script .= '?campaignId=' . variable_get('onscroll_campaign_id');
      $script .= '&creativeId=' . variable_get('onscroll_creative_id');
      $script .= '&accountId=' . variable_get('onscroll_account_id');
      $script .= '"></script>';
      $onscroll_content[] = $script;
    }
  }
  return implode('', $onscroll_content);
}

/**
 * Implements hook_block_info().
 */
function onscroll_block_info() {
  $blocks['onscroll'] = array(
    'info' => t('OnScroll'),
    'cache' => DRUPAL_NO_CACHE,
  );
  return $blocks;
}

/**
* Implements hook_block_view().
*/
function onscroll_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'onscroll':
      $block['content'] = _onscroll_get_block_content();
      break;
  }

  return $block;
}
